{
  "name": "dot-game",
  "version": "0.1.0",
  "description": "Dot Game",
  "author": "https://github.com/narr",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "node-sass-middleware": "^0.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.0",
    "cypress": "^3.8.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-cypress": "^2.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env PORT=8000 npm start",
    "lint": "eslint **/*.js",
    "test": "cypress open",
    "test:ci": "cross-env CYPRESS_baseUrl=http://localhost:8001 cypress run",
    "serve": "cross-env PORT=8001 npm start",
    "ci": "npm-run-all --parallel --race --print-label serve test:ci"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,scss,css,html,md}": [
      "prettier --ignore-path ./.eslintignore --write"
    ]
  }
}
